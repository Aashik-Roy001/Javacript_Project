<body>
  <div class="main-container">
    <div class="container">
      <form method="POST" action="/url">
        <h1>URL Shortener</h1>
        <% if (locals.id) { %>
        <p><b>URL Generated: http://localhost:8001/url/<%= id %></b></p>
        <% } %>
        <input type="text" name="url" placeholder="Enter URL" />
        <button type="submit"><b>Shorten</b></button>
      </form>
    </div>

    <div class="table-container">
      <% if (locals.urls) { %>
      <table>
        <thead>
          <tr>
            <th>S. No.</th>
            <th>Short Id</th>
            <th>Redirect</th>
            <th>Click</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectURL %></a></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } %>
    </div>
  </div>
</body>
